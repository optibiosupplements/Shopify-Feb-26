{% comment %}
  Optibio FAQ Section
  Section 9: 7-question accordion, one open at a time
  Uses <details>/<summary> for no-JS accessibility
  Enhanced by product-page.js for single-open behavior
{% endcomment %}

<section class="optibio-section optibio-faq optibio-reveal" id="optibio-faq">
  <div class="page-width">

    <div class="optibio-section-header">
      <h2>{{ section.settings.heading }}</h2>
    </div>

    <div class="optibio-faq-list">
      {% for block in section.blocks %}
        {% if block.type == 'faq_item' %}
          <details class="optibio-faq-item" {{ block.shopify_attributes }}>
            <summary>{{ block.settings.question }}</summary>
            <div class="optibio-faq-answer">
              {{ block.settings.answer }}
            </div>
          </details>
        {% endif %}
      {% endfor %}
    </div>

    {% comment %} FDA Disclaimer {% endcomment %}
    <div class="optibio-fda-disclaimer" style="margin-top:var(--optibio-space-2xl);">
      {{ section.settings.fda_disclaimer }}
    </div>

  </div>
</section>

