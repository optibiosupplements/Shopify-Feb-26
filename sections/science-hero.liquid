{% comment %}
  Science Page Hero — "The Science Behind Optibio"
  Sky blue gradient bg, centered badge + heading + subheading + trust row
{% endcomment %}

<section class="optibio-science-hero optibio-page-section">
  <div class="optibio-page-section__inner">
    <div class="optibio-science-hero__badge">
      <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="10"/><path d="M12 16v-4M12 8h.01"/></svg>
      {{ section.settings.badge_text }}
    </div>

    <h1 class="optibio-page-section__heading">{{ section.settings.heading }}</h1>
    <p class="optibio-page-section__subheading">{{ section.settings.subheading }}</p>

    <div class="optibio-science-hero__trust-row">
      {% for block in section.blocks %}
        {% if block.type == 'trust_item' %}
          <div class="optibio-science-hero__trust-item" {{ block.shopify_attributes }}>
            <span class="optibio-science-hero__trust-icon">{% render 'optibio-icons', icon: block.settings.icon, size: 16 %}</span>
            <span>{{ block.settings.text }}</span>
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Science Hero",
  "tag": "section",
  "settings": [
    {
      "type": "text",
      "id": "badge_text",
      "label": "Badge Text",
      "default": "Peer-Reviewed Research"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "The Science Behind Optibio"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subheading",
      "default": "Every ingredient is clinically studied. Every claim is backed by peer-reviewed research. No proprietary blends, no hidden dosages — just transparent, evidence-based formulation."
    }
  ],
  "blocks": [
    {
      "type": "trust_item",
      "name": "Trust Item",
      "limit": 5,
      "settings": [
        {
          "type": "text",
          "id": "icon",
          "label": "Icon (emoji)",
          "default": "beaker"
        },
        {
          "type": "text",
          "id": "text",
          "label": "Text",
          "default": "24+ Clinical Trials"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Science Hero",
      "blocks": [
        { "type": "trust_item", "settings": { "icon": "beaker", "text": "24+ Clinical Trials" } },
        { "type": "trust_item", "settings": { "icon": "chart", "text": "Peer-Reviewed Journals" } },
        { "type": "trust_item", "settings": { "icon": "shield", "text": "Third-Party Verified" } },
        { "type": "trust_item", "settings": { "icon": "flag-us", "text": "FDA-Audited Facility" } }
      ]
    }
  ]
}
{% endschema %}
