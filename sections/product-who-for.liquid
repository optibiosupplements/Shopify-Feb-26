{% comment %}
  Optibio Who This Is For Section
  Section 6: Perfect For / Not Right For â€” two-column layout
{% endcomment %}

<section class="optibio-section optibio-who-for optibio-reveal" id="optibio-who-for">
  <div class="page-width">

    <div class="optibio-section-header">
      <span class="optibio-overline">WHO IT'S FOR</span>
      <h2>{{ section.settings.heading }}</h2>
    </div>

    <div class="optibio-who-for__columns">

      {% comment %} Perfect For {% endcomment %}
      <div class="optibio-who-for__column">
        <h3 style="color:#059669;">&#10003; Perfect For</h3>
        <ul class="optibio-check-list">
          <li>{{ section.settings.for_1 }}</li>
          <li>{{ section.settings.for_2 }}</li>
          <li>{{ section.settings.for_3 }}</li>
          <li>{{ section.settings.for_4 }}</li>
        </ul>
      </div>

      {% comment %} Not Right For {% endcomment %}
      <div class="optibio-who-for__column">
        <h3 style="color:#DC2626;">&#10007; Not Right For</h3>
        <ul class="optibio-x-list">
          <li>{{ section.settings.not_1 }}</li>
          <li>{{ section.settings.not_2 }}</li>
          <li>{{ section.settings.not_3 }}</li>
          <li>{{ section.settings.not_4 }}</li>
        </ul>
      </div>

    </div>

  </div>
</section>

{% schema %}
{
  "name": "Optibio Who For",
  "tag": "section",
  "class": "optibio-who-for-wrapper",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Section Heading",
      "default": "Is Optibio Right for You?"
    },
    {
      "type": "header",
      "content": "Perfect For"
    },
    {
      "type": "text",
      "id": "for_1",
      "label": "Item 1",
      "default": "Stressed professionals seeking calm without sedation"
    },
    {
      "type": "text",
      "id": "for_2",
      "label": "Item 2",
      "default": "Poor sleepers who want to wake up actually feeling rested"
    },
    {
      "type": "text",
      "id": "for_3",
      "label": "Item 3",
      "default": "Active individuals looking for natural endurance support"
    },
    {
      "type": "text",
      "id": "for_4",
      "label": "Item 4",
      "default": "Anyone experiencing mental fog or burnout"
    },
    {
      "type": "header",
      "content": "Not Right For"
    },
    {
      "type": "text",
      "id": "not_1",
      "label": "Item 1",
      "default": "Anyone expecting overnight results"
    },
    {
      "type": "text",
      "id": "not_2",
      "label": "Item 2",
      "default": "Pregnant or nursing women (consult your doctor)"
    },
    {
      "type": "text",
      "id": "not_3",
      "label": "Item 3",
      "default": "Those taking sedatives or thyroid medication (consult your doctor)"
    },
    {
      "type": "text",
      "id": "not_4",
      "label": "Item 4",
      "default": "Anyone under 18 years of age"
    }
  ],
  "presets": [
    {
      "name": "Optibio Who For"
    }
  ]
}
{% endschema %}
