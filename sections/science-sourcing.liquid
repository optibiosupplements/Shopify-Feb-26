{% comment %}
  Science Page — Sourcing & Traceability
  Two-column grid of sourcing cards + bottom CTA
{% endcomment %}

<section class="optibio-sourcing optibio-page-section optibio-bg-mist optibio-reveal">
  <div class="optibio-page-section__inner">
    <span class="optibio-overline">SEED TO SHELF</span>
    <h2 class="optibio-page-section__heading">{{ section.settings.heading }}</h2>
    <p class="optibio-page-section__subheading">{{ section.settings.subheading }}</p>

    <div class="optibio-sourcing__grid">
      {% for block in section.blocks %}
        {% if block.type == 'sourcing_card' %}
          <div class="optibio-sourcing__card" {{ block.shopify_attributes }}>
            <div class="optibio-sourcing__card-icon">{% render 'optibio-icons', icon: block.settings.icon, size: 24 %}</div>
            <h3 class="optibio-sourcing__card-title">{{ block.settings.title }}</h3>
            <p class="optibio-sourcing__card-desc">{{ block.settings.description }}</p>
            {% if block.settings.detail != blank %}
              <div class="optibio-sourcing__card-detail">
                <span class="optibio-sourcing__card-detail-icon">✓</span>
                {{ block.settings.detail }}
              </div>
            {% endif %}
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</section>

{%- comment -%} Bottom CTA Section {%- endcomment -%}
<section class="optibio-page-cta optibio-page-section">
  <div class="optibio-page-section__inner">
    <h2 class="optibio-page-section__heading">{{ section.settings.cta_heading }}</h2>
    <p class="optibio-page-section__subheading" style="text-align: center;">{{ section.settings.cta_subheading }}</p>

    <a href="{{ section.settings.cta_link | default: '/products/optibio-ashwagandha-ksm-66' }}" class="optibio-page-cta__btn">
      {{ section.settings.cta_text }}
      <span>→</span>
    </a>

    <div class="optibio-page-cta__trust">
      <span><span class="optibio-page-cta__check">✔</span> 90-day money-back guarantee</span>
      <span><span class="optibio-page-cta__check">✔</span> Free shipping on ${{ settings.free_shipping_threshold | default: 49 }}+</span>
      <span><span class="optibio-page-cta__check">✔</span> Third-party tested</span>
    </div>
  </div>
</section>

