{% comment %}
  Coming Soon Teaser
  Builds anticipation for future products
  Includes inline email capture for product launch notifications
{% endcomment %}

<section class="optibio-coming-soon optibio-page-section">
  <div class="optibio-page-section__inner">
    <div class="optibio-coming-soon__card">
      <div class="optibio-coming-soon__glow"></div>

      <span class="optibio-coming-soon__badge">{{ section.settings.badge_text }}</span>
      <h2 class="optibio-coming-soon__heading">{{ section.settings.heading }}</h2>
      <p class="optibio-coming-soon__desc">{{ section.settings.description }}</p>

      {% if section.settings.show_categories %}
        <div class="optibio-coming-soon__categories">
          {% for block in section.blocks %}
            {% if block.type == 'category' %}
              <div class="optibio-coming-soon__cat" {{ block.shopify_attributes }}>
                <span class="optibio-coming-soon__cat-icon">{{ block.settings.icon }}</span>
                <span class="optibio-coming-soon__cat-label">{{ block.settings.label }}</span>
              </div>
            {% endif %}
          {% endfor %}
        </div>
      {% endif %}

      {% if section.settings.show_email_capture %}
        <div class="optibio-coming-soon__capture">
          <p class="optibio-coming-soon__capture-label">{{ section.settings.capture_label }}</p>
          <form class="optibio-coming-soon__form" action="/contact#contact_form" method="post" accept-charset="UTF-8">
            <input type="hidden" name="form_type" value="customer">
            <input type="hidden" name="utf8" value="&#10003;">
            <input type="hidden" name="contact[tags]" value="coming-soon,early-access">
            <div class="optibio-coming-soon__input-wrap">
              <input
                type="email"
                name="contact[email]"
                class="optibio-coming-soon__input"
                placeholder="{{ section.settings.placeholder_text }}"
                required
                autocomplete="email"
              >
              <button type="submit" class="optibio-coming-soon__submit">
                {{ section.settings.button_text }}
              </button>
            </div>
          </form>
        </div>
      {% endif %}

      <div class="optibio-coming-soon__trust">
        <span>üî¨ Same clinical-grade standards</span>
        <span>üìã Third-party tested</span>
        <span>üá∫üá∏ Made in the USA</span>
      </div>
    </div>
  </div>
</section>

<style>
  .optibio-coming-soon {
    background: linear-gradient(180deg, #fff 0%, #F8FCFE 100%);
    padding: 64px 0;
  }
  .optibio-coming-soon__card {
    max-width: 700px;
    margin: 0 auto;
    background: linear-gradient(135deg, rgba(255,255,255,0.95), rgba(247,244,239,0.9));
    backdrop-filter: blur(12px);
    border: 1px solid rgba(201, 169, 97, 0.25);
    border-radius: 24px;
    padding: 48px 40px;
    text-align: center;
    position: relative;
    overflow: hidden;
  }
  .optibio-coming-soon__glow {
    position: absolute;
    top: -60px;
    left: 50%;
    transform: translateX(-50%);
    width: 300px;
    height: 120px;
    background: radial-gradient(ellipse, rgba(201, 169, 97, 0.12) 0%, transparent 70%);
    pointer-events: none;
  }
  .optibio-coming-soon__badge {
    display: inline-block;
    background: linear-gradient(135deg, #1E3A5F, #2C4A6B);
    color: #C9A961;
    font-family: 'Inter', sans-serif;
    font-size: 11px;
    font-weight: 700;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    padding: 6px 18px;
    border-radius: 20px;
    margin-bottom: 20px;
    position: relative;
  }
  .optibio-coming-soon__heading {
    font-family: 'Sora', sans-serif;
    font-size: 32px;
    font-weight: 700;
    color: #1A2F4D;
    margin: 0 0 12px;
    line-height: 1.2;
    position: relative;
  }
  .optibio-coming-soon__desc {
    font-family: 'Inter', sans-serif;
    font-size: 16px;
    line-height: 1.6;
    color: #475569;
    margin: 0 0 28px;
    max-width: 520px;
    margin-left: auto;
    margin-right: auto;
    position: relative;
  }
  .optibio-coming-soon__categories {
    display: flex;
    justify-content: center;
    flex-wrap: wrap;
    gap: 10px;
    margin-bottom: 32px;
    position: relative;
  }
  .optibio-coming-soon__cat {
    display: inline-flex;
    align-items: center;
    gap: 6px;
    padding: 8px 16px;
    background: rgba(30, 58, 95, 0.05);
    border: 1px solid rgba(30, 58, 95, 0.1);
    border-radius: 24px;
    font-family: 'Inter', sans-serif;
    font-size: 13px;
    font-weight: 500;
    color: #1A2F4D;
  }
  .optibio-coming-soon__cat-icon {
    font-size: 16px;
  }
  .optibio-coming-soon__capture {
    max-width: 440px;
    margin: 0 auto 24px;
    position: relative;
  }
  .optibio-coming-soon__capture-label {
    font-family: 'Inter', sans-serif;
    font-size: 14px;
    font-weight: 600;
    color: #1A2F4D;
    margin: 0 0 12px;
  }
  .optibio-coming-soon__input-wrap {
    display: flex;
    gap: 0;
    border-radius: 12px;
    overflow: hidden;
    border: 1px solid #E5E7EB;
    background: #fff;
    transition: border-color 0.2s ease;
  }
  .optibio-coming-soon__input-wrap:focus-within {
    border-color: #C9A961;
    box-shadow: 0 0 0 3px rgba(201, 169, 97, 0.15);
  }
  .optibio-coming-soon__input {
    flex: 1;
    border: none;
    padding: 14px 16px;
    font-family: 'Inter', sans-serif;
    font-size: 15px;
    color: #1A2F4D;
    background: transparent;
    outline: none;
    min-width: 0;
  }
  .optibio-coming-soon__input::placeholder {
    color: #94A3B8;
  }
  .optibio-coming-soon__submit {
    flex-shrink: 0;
    padding: 14px 24px;
    background: #2563EB;
    color: #fff;
    border: none;
    font-family: 'Inter', sans-serif;
    font-size: 14px;
    font-weight: 600;
    cursor: pointer;
    transition: background 0.2s ease;
    white-space: nowrap;
  }
  .optibio-coming-soon__submit:hover {
    background: #1D4ED8;
  }
  .optibio-coming-soon__trust {
    display: flex;
    justify-content: center;
    flex-wrap: wrap;
    gap: 20px;
    font-family: 'Inter', sans-serif;
    font-size: 12px;
    color: #6B7280;
    position: relative;
  }
  .optibio-coming-soon__trust span {
    white-space: nowrap;
  }

  @media (max-width: 768px) {
    .optibio-coming-soon { padding: 40px 0; }
    .optibio-coming-soon__card { padding: 32px 24px; border-radius: 20px; }
    .optibio-coming-soon__heading { font-size: 26px; }
    .optibio-coming-soon__input-wrap {
      flex-direction: column;
      border-radius: 12px;
    }
    .optibio-coming-soon__submit {
      border-radius: 0 0 11px 11px;
    }
    .optibio-coming-soon__trust { gap: 12px; }
  }
</style>

