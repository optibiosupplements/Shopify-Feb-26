<section class="optibio-section optibio-final-cta optibio-reveal" id="optibio-final-cta">
  <div class="page-width">

    <h2>{{ section.settings.heading }}</h2>
    <p>{{ section.settings.subheading }}</p>

    <a href="#optibio-hero" class="optibio-btn-primary" style="display:inline-flex;">
      {{ section.settings.button_text }}
    </a>

    <div class="optibio-final-cta__trust">
      <span>&#10003; 90-day guarantee</span>
      <span>&#10003; Free shipping $49+</span>
      <span>&#10003; Clinically studied KSM-66&reg;</span>
    </div>

  </div>
</section>

{% schema %}
{
  "name": "Optibio Final CTA",
  "tag": "section",
  "class": "optibio-final-cta-wrapper",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Ready to Feel Calm Again?"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subheading",
      "default": "Backed by 24+ peer-reviewed clinical studies. 600mg clinical dose. 90-day money-back guarantee."
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Start Your Journey \u2014 $39.99"
    }
  ],
  "presets": [
    {
      "name": "Optibio Final CTA"
    }
  ]
}
{% endschema %}
