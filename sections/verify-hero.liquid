<script>
  // Batch verification is currently disabled (Coming Soon state).
  // Sample batch data — replace with Shopify metaobject API calls when ready
  var verifyEnabled = false;
  var optiboBatches = {
    'OB-KSM66-2026-001': {
      product: 'KSM-66® Ashwagandha — 600mg',
      lot: 'OB-KSM66-2026-001',
      mfgDate: 'January 15, 2026',
      expDate: 'January 15, 2028',
      size: '90 Capsules (45-Day Supply)',
      potency: '5.2% withanolides (600mg/serving) — Exceeds spec',
      sourced: 'Organic KSM-66® root extract — Ixoreal Biomed, Hyderabad, India',
      lab: 'Eurofins Scientific — Los Angeles, CA',
      facility: 'FDA-audited, cGMP-certified facility — USA',
      released: 'January 22, 2026 — All specs passed'
    },
    'OB-KSM66-2026-002': {
      product: 'KSM-66® Ashwagandha — 600mg',
      lot: 'OB-KSM66-2026-002',
      mfgDate: 'February 5, 2026',
      expDate: 'February 5, 2028',
      size: '90 Capsules (45-Day Supply)',
      potency: '5.1% withanolides (600mg/serving) — Meets spec',
      sourced: 'Organic KSM-66® root extract — Ixoreal Biomed, Hyderabad, India',
      lab: 'Eurofins Scientific — Los Angeles, CA',
      facility: 'FDA-audited, cGMP-certified facility — USA',
      released: 'February 12, 2026 — All specs passed'
    }
  };

  function handleVerify(e) {
    e.preventDefault();
    if (!verifyEnabled) return false;
    var input = document.getElementById('lot-number').value.trim().toUpperCase();
    var results = document.getElementById('verify-results');
    var notFound = document.getElementById('verify-not-found');
    var btn = document.getElementById('verify-btn');
    var btnText = btn.querySelector('.optibio-verify__submit-text');
    var btnLoad = btn.querySelector('.optibio-verify__submit-loading');

    btnText.style.display = 'none';
    btnLoad.style.display = 'inline';
    btn.disabled = true;

    setTimeout(function() {
      btnText.style.display = 'inline';
      btnLoad.style.display = 'none';
      btn.disabled = false;

      var batch = optiboBatches[input];
      if (batch) {
        document.getElementById('result-product').textContent = batch.product;
        document.getElementById('result-lot').textContent = batch.lot;
        document.getElementById('result-mfg-date').textContent = batch.mfgDate;
        document.getElementById('result-exp-date').textContent = batch.expDate;
        document.getElementById('result-size').textContent = batch.size;
        document.getElementById('result-potency').textContent = batch.potency;
        document.getElementById('result-sourced').textContent = batch.sourced;
        document.getElementById('result-lab').textContent = batch.lab;
        document.getElementById('result-facility').textContent = batch.facility;
        document.getElementById('result-released').textContent = batch.released;
        results.style.display = 'block';
        notFound.style.display = 'none';
        results.scrollIntoView({ behavior: 'smooth', block: 'start' });
      } else {
        results.style.display = 'none';
        notFound.style.display = 'block';
        notFound.scrollIntoView({ behavior: 'smooth', block: 'start' });
      }
    }, 800);
  }
</script>

