{% comment %}
  About Page — Mission: The Problem + Our Solution
  Side-by-side cards: red (problem) + green (solution)
{% endcomment %}

<section class="optibio-about-mission optibio-page-section optibio-reveal">
  <div class="optibio-page-section__inner">
    <span class="optibio-overline">OUR MISSION</span>
    <h2 class="optibio-page-section__heading" style="text-align: center; margin-left: auto; margin-right: auto;">{{ section.settings.heading }}</h2>
    <p class="optibio-page-section__subheading" style="text-align: center; margin-left: auto; margin-right: auto;">{{ section.settings.subheading }}</p>

    <div class="optibio-about-mission__grid">
      {%- comment -%} The Problem {%- endcomment -%}
      <div class="optibio-about-mission__block optibio-about-mission__problem">
        <div class="optibio-about-mission__block-icon">{% render 'optibio-icons', icon: section.settings.problem_icon, size: 28 %}</div>
        <h3 class="optibio-about-mission__block-title">{{ section.settings.problem_title }}</h3>
        <p class="optibio-about-mission__block-text">{{ section.settings.problem_text }}</p>
        <ul class="optibio-about-mission__block-list">
          {% for block in section.blocks %}
            {% if block.type == 'problem_item' %}
              <li {{ block.shopify_attributes }}>{{ block.settings.text }}</li>
            {% endif %}
          {% endfor %}
        </ul>
      </div>

      {%- comment -%} Our Solution {%- endcomment -%}
      <div class="optibio-about-mission__block optibio-about-mission__solution">
        <div class="optibio-about-mission__block-icon">{% render 'optibio-icons', icon: section.settings.solution_icon, size: 28 %}</div>
        <h3 class="optibio-about-mission__block-title">{{ section.settings.solution_title }}</h3>
        <p class="optibio-about-mission__block-text">{{ section.settings.solution_text }}</p>
        <ul class="optibio-about-mission__block-list">
          {% for block in section.blocks %}
            {% if block.type == 'solution_item' %}
              <li {{ block.shopify_attributes }}>{{ block.settings.text }}</li>
            {% endif %}
          {% endfor %}
        </ul>
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Mission & Problem",
  "tag": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Section Heading",
      "default": "Our Mission"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Section Subheading",
      "default": "We believe the supplement industry can do better — and we're proving it, one batch at a time."
    },
    {
      "type": "text",
      "id": "problem_icon",
      "label": "Problem Icon",
      "default": "warning"
    },
    {
      "type": "text",
      "id": "problem_title",
      "label": "Problem Title",
      "default": "The Industry Problem"
    },
    {
      "type": "textarea",
      "id": "problem_text",
      "label": "Problem Description",
      "default": "Most supplement brands cut corners. They hide behind \"proprietary blends,\" use the cheapest ingredients, and make claims without clinical evidence."
    },
    {
      "type": "text",
      "id": "solution_icon",
      "label": "Solution Icon",
      "default": "check"
    },
    {
      "type": "text",
      "id": "solution_title",
      "label": "Solution Title",
      "default": "The Optibio Standard"
    },
    {
      "type": "textarea",
      "id": "solution_text",
      "label": "Solution Description",
      "default": "Every Optibio product meets the highest standards for transparency, quality, and clinical evidence. No shortcuts, no exceptions."
    }
  ],
  "blocks": [
    {
      "type": "problem_item",
      "name": "Problem Item",
      "limit": 5,
      "settings": [
        {
          "type": "text",
          "id": "text",
          "label": "Problem Point",
          "default": "Proprietary blends hiding real dosages"
        }
      ]
    },
    {
      "type": "solution_item",
      "name": "Solution Item",
      "limit": 5,
      "settings": [
        {
          "type": "text",
          "id": "text",
          "label": "Solution Point",
          "default": "Full ingredient transparency — every dosage listed"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Mission & Problem",
      "blocks": [
        { "type": "problem_item", "settings": { "text": "Proprietary blends hiding real dosages" } },
        { "type": "problem_item", "settings": { "text": "Underdosed ingredients (\"pixie-dusting\")" } },
        { "type": "problem_item", "settings": { "text": "No third-party testing or verification" } },
        { "type": "problem_item", "settings": { "text": "Unsubstantiated health claims" } },
        { "type": "solution_item", "settings": { "text": "Full ingredient transparency — every dosage listed" } },
        { "type": "solution_item", "settings": { "text": "Clinical dosages backed by peer-reviewed research" } },
        { "type": "solution_item", "settings": { "text": "Every batch third-party tested and traceable" } },
        { "type": "solution_item", "settings": { "text": "Only claims supported by published clinical data" } }
      ]
    }
  ]
}
{% endschema %}
