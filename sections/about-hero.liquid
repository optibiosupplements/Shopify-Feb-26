{% comment %}
  About Page Hero — Brand Story
  Two-column: content left, image right
  Sky blue gradient bg
{% endcomment %}

{{ 'about-page.css' | asset_url | stylesheet_tag }}
{{ 'science-page.css' | asset_url | stylesheet_tag }}
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=Sora:wght@600;700&display=swap" rel="stylesheet">

<section class="optibio-about-hero optibio-page-section">
  <div class="optibio-page-section__inner">
    <div class="optibio-about-hero__content">
      <span class="optibio-about-hero__badge">{{ section.settings.badge_text }}</span>
      <h1 class="optibio-about-hero__heading">{{ section.settings.heading }}</h1>
      <div class="optibio-about-hero__desc">{{ section.settings.description }}</div>
    </div>

    <div class="optibio-about-hero__image-wrap">
      {% if section.settings.hero_image != blank %}
        <img
          src="{{ section.settings.hero_image | image_url: width: 800 }}"
          alt="{{ section.settings.heading }}"
          class="optibio-about-hero__image"
          loading="eager"
          width="800"
        />
      {% else %}
        <div class="optibio-about-hero__image-placeholder optibio-about-hero__image-placeholder--branded">
          <svg role="img" aria-label="Optibio manufacturing facility illustration" width="280" height="200" viewBox="0 0 280 200" fill="none" xmlns="http://www.w3.org/2000/svg">
            <!-- Facility building -->
            <rect x="40" y="60" width="200" height="120" rx="8" fill="#1A2F4D" opacity="0.9"/>
            <rect x="40" y="60" width="200" height="120" rx="8" stroke="#C9A961" stroke-width="2" fill="none"/>
            <!-- Windows -->
            <rect x="65" y="85" width="35" height="25" rx="4" fill="#2A4A6D"/>
            <rect x="122" y="85" width="35" height="25" rx="4" fill="#2A4A6D"/>
            <rect x="179" y="85" width="35" height="25" rx="4" fill="#2A4A6D"/>
            <!-- Door -->
            <rect x="117" y="135" width="46" height="45" rx="4" fill="#2A4A6D"/>
            <circle cx="155" cy="158" r="3" fill="#C9A961"/>
            <!-- Roof accent -->
            <rect x="40" y="60" width="200" height="8" rx="4" fill="#C9A961"/>
            <!-- Shield icon (quality) -->
            <g transform="translate(105, 20)">
              <path d="M35 5L55 15V30C55 42 47 50 35 55C23 50 15 42 15 30V15L35 5Z" fill="#1A2F4D" stroke="#C9A961" stroke-width="2"/>
              <polyline points="27 30 33 36 43 24" stroke="#C9A961" stroke-width="2.5" fill="none" stroke-linecap="round" stroke-linejoin="round"/>
            </g>
            <!-- Beaker icon (testing) -->
            <g transform="translate(15, 100)">
              <path d="M8 3H22M10 3V12L5 22C4 24 5 26 8 26H22C25 26 26 24 25 22L20 12V3" stroke="#C9A961" stroke-width="1.5" fill="none" stroke-linecap="round"/>
              <line x1="12" y1="16" x2="18" y2="16" stroke="#C9A961" stroke-width="1.5"/>
            </g>
            <!-- Leaf icon (organic) -->
            <g transform="translate(248, 100)">
              <path d="M15 25C15 25 5 20 5 10C5 5 10 2 15 2C20 2 25 5 25 10C25 20 15 25 15 25Z" stroke="#C9A961" stroke-width="1.5" fill="none"/>
              <line x1="15" y1="25" x2="15" y2="10" stroke="#C9A961" stroke-width="1.5"/>
              <line x1="15" y1="15" x2="20" y2="10" stroke="#C9A961" stroke-width="1.5"/>
            </g>
          </svg>
          <div class="optibio-about-hero__image-placeholder-info">
            <span class="optibio-about-hero__image-placeholder-title">FDA-Audited Facility</span>
            <span class="optibio-about-hero__image-placeholder-location">Mount Vernon, NY</span>
          </div>
        </div>
      {% endif %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "About Hero",
  "tag": "section",
  "settings": [
    {
      "type": "text",
      "id": "badge_text",
      "label": "Badge Text",
      "default": "Our Story"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Why We Started Optibio"
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "Description",
      "default": "<p>The supplement industry has a trust problem. Too many brands hide behind proprietary blends, use underdosed ingredients, and make claims without evidence.</p><p>We started Optibio because we believed consumers deserve better — clinical-grade supplements with full transparency, real dosages, and every claim backed by peer-reviewed research.</p>"
    },
    {
      "type": "image_picker",
      "id": "hero_image",
      "label": "Hero Image (team, facility, or lifestyle)"
    }
  ],
  "presets": [
    {
      "name": "About Hero"
    }
  ]
}
{% endschema %}
