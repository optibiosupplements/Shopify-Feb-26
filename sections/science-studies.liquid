      "type": "study",
      "name": "Clinical Study",
      "limit": 8,
      "settings": [
        {
          "type": "text",
          "id": "study_type",
          "label": "Study Type Badge",
          "default": "Randomized, Double-Blind"
        },
        {
          "type": "text",
          "id": "key_finding",
          "label": "Key Finding (large text)",
          "default": "27.9% Cortisol Reduction"
        },
        {
          "type": "text",
          "id": "study_title",
          "label": "Study Title",
          "default": "A Prospective, Randomized Double-Blind, Placebo-Controlled Study of Safety and Efficacy..."
        },
        {
          "type": "text",
          "id": "journal",
          "label": "Journal Name",
          "default": "Indian J Psychol Med"
        },
        {
          "type": "text",
          "id": "year",
          "label": "Year",
          "default": "2012"
        },
        {
          "type": "text",
          "id": "participants",
          "label": "Participants",
          "default": "64 participants"
        },
        {
          "type": "text",
          "id": "duration",
          "label": "Duration",
          "default": "60 days"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Study Description",
          "default": "Subjects receiving KSM-66® showed a significant reduction in serum cortisol levels compared to placebo, alongside improvements in perceived stress scores."
        },
        {
          "type": "url",
          "id": "pubmed_url",
          "label": "PubMed URL"
        }
      ]
    }
  ],
  "presets": [
    {
