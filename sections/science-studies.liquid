{% comment %}
  Science Page — Clinical Studies Grid
  Cards showing key findings, study design, PubMed links
  FDA disclaimer at bottom
{% endcomment %}

<section class="optibio-studies optibio-page-section optibio-bg-mist optibio-reveal">
  <div class="optibio-page-section__inner">
    <span class="optibio-overline">PUBLISHED RESEARCH</span>
    <h2 class="optibio-page-section__heading">{{ section.settings.heading }}</h2>
    <p class="optibio-page-section__subheading">{{ section.settings.subheading }}</p>

    <div class="optibio-studies__grid">
      {% for block in section.blocks %}
        {% if block.type == 'study' %}
          <div class="optibio-studies__card" {{ block.shopify_attributes }}>
            <span class="optibio-studies__card-badge">
              <svg width="12" height="12" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><polyline points="20 6 9 17 4 12"/></svg>
              {{ block.settings.study_type }}
            </span>

            <div class="optibio-studies__card-finding">
              {{ block.settings.key_finding }}
            </div>

            <div class="optibio-studies__card-title">{{ block.settings.study_title }}</div>

            <div class="optibio-studies__card-meta">
              {% if block.settings.journal != blank %}
                <span class="optibio-studies__card-meta-item">{% render 'optibio-icons', icon: 'newspaper', size: 14 %} {{ block.settings.journal }}</span>
              {% endif %}
              {% if block.settings.year != blank %}
                <span class="optibio-studies__card-meta-item">{% render 'optibio-icons', icon: 'calendar', size: 14 %} {{ block.settings.year }}</span>
              {% endif %}
              {% if block.settings.participants != blank %}
                <span class="optibio-studies__card-meta-item">{% render 'optibio-icons', icon: 'users', size: 14 %} {{ block.settings.participants }}</span>
              {% endif %}
              {% if block.settings.duration != blank %}
                <span class="optibio-studies__card-meta-item">{% render 'optibio-icons', icon: 'timer', size: 14 %} {{ block.settings.duration }}</span>
              {% endif %}
            </div>

            <p class="optibio-studies__card-desc">{{ block.settings.description }}</p>

            {% if block.settings.pubmed_url != blank %}
              <a href="{{ block.settings.pubmed_url }}" class="optibio-studies__card-link" target="_blank" rel="noopener noreferrer">
                View on PubMed →
              </a>
            {% endif %}
          </div>
        {% endif %}
      {% endfor %}
    </div>

    {% if section.settings.fda_disclaimer != blank %}
      <div class="optibio-studies__disclaimer">
        {% render 'optibio-icons', icon: 'warning', size: 16 %} {{ section.settings.fda_disclaimer }}
      </div>
    {% endif %}
  </div>
</section>

{% schema %}
{
  "name": "Clinical Studies",
  "tag": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Clinically Studied Results"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subheading",
      "default": "Real outcomes from peer-reviewed, placebo-controlled clinical trials using KSM-66® ashwagandha."
