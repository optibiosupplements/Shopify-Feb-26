  "name": "Optibio How It Works",
  "tag": "section",
  "class": "optibio-mechanism-wrapper",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Section Heading",
      "default": "How KSM-66\u00ae Works"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subheading",
      "default": "A clinically studied adaptogen that works with your body\u2019s natural stress response system."
    },
    {
      "type": "text",
      "id": "step_1_title",
      "label": "Step 1 Title",
      "default": "Cortisol Regulation"
    },
    {
      "type": "textarea",
      "id": "step_1_desc",
      "label": "Step 1 Description",
      "default": "KSM-66\u00ae modulates the HPA axis \u2014 your body\u2019s central stress command system \u2014 to help reduce excess cortisol production."
    },
    {
      "type": "text",
      "id": "step_2_title",
      "label": "Step 2 Title",
      "default": "Adaptogenic Response"
    },
    {
      "type": "textarea",
      "id": "step_2_desc",
      "label": "Step 2 Description",
      "default": "As an adaptogen, it helps your body build resilience to stressors over time, rather than masking symptoms."
    },
    {
      "type": "text",
      "id": "step_3_title",
      "label": "Step 3 Title",
      "default": "Cumulative Benefits"
    },
    {
      "type": "textarea",
      "id": "step_3_desc",
      "label": "Step 3 Description",
      "default": "With consistent daily use, benefits compound: better sleep, clearer thinking, calmer days, and improved recovery."
    }
  ],
  "presets": [
    {
      "name": "Optibio How It Works"
    }
  ]
}
