<section class="optibio-section optibio-mechanism optibio-reveal" id="optibio-mechanism">
  <div class="page-width">

    <div class="optibio-section-header">
      <h2>{{ section.settings.heading }}</h2>
      <p>{{ section.settings.subheading }}</p>
    </div>

    <div class="optibio-mechanism-steps">

      {% comment %} Step 1 {% endcomment %}
      <div class="optibio-mechanism-step optibio-reveal optibio-reveal-delay-1">
        <div class="optibio-mechanism-step__number">1</div>
        <h3>{{ section.settings.step_1_title }}</h3>
        <p>{{ section.settings.step_1_desc }}</p>
      </div>

      {% comment %} Step 2 {% endcomment %}
      <div class="optibio-mechanism-step optibio-reveal optibio-reveal-delay-2">
        <div class="optibio-mechanism-step__number">2</div>
        <h3>{{ section.settings.step_2_title }}</h3>
        <p>{{ section.settings.step_2_desc }}</p>
      </div>

      {% comment %} Step 3 {% endcomment %}
      <div class="optibio-mechanism-step optibio-reveal optibio-reveal-delay-3">
        <div class="optibio-mechanism-step__number">3</div>
        <h3>{{ section.settings.step_3_title }}</h3>
        <p>{{ section.settings.step_3_desc }}</p>
      </div>

    </div>

    <div style="text-align:center;margin-top:var(--optibio-space-xl);">
      <a href="/pages/science" style="font-family:var(--optibio-font-body);font-size:16px;font-weight:600;color:var(--optibio-navy);">
        Dive Deeper Into the Science &rarr;
      </a>
    </div>

  </div>
</section>

