{% comment %}
  Optibio Traceability Badge Section
  "Seed to Shelf Verified" trust signal
  Placed between Trust Badges and FAQ on product page
  Brand: Navy #1A2F4D, Gold #C9A961
{% endcomment %}

<section class="optibio-section optibio-traceability" id="optibio-traceability">
  <div class="optibio-traceability__card optibio-glass">

    <div class="optibio-traceability__seal-img">
      <img
        src="{{ 'badge-seed-to-shelf.png' | asset_url }}"
        alt="Seed-to-Shelf Traceability"
        width="100"
        height="100"
        loading="lazy"
      >
    </div>

    <div class="optibio-traceability__header">
      <h3 class="optibio-traceability__title">{{ section.settings.heading }}</h3>
    </div>

    <p class="optibio-traceability__description">{{ section.settings.description }}</p>

    {% assign verify_link = section.settings.button_link | default: '/pages/verify' %}
    <a href="{{ verify_link }}" class="optibio-traceability__cta">
      {{ section.settings.button_text }} &rarr;
    </a>

    {% if section.settings.show_badges %}
    <div class="optibio-traceability__badges">
      <span class="optibio-traceability__badge-item">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path><polyline points="9 22 9 12 15 12 15 22"></polyline></svg>
        FDA-Audited Facility
      </span>
      <span class="optibio-traceability__badge-item">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path><polyline points="14 2 14 8 20 8"></polyline><line x1="16" y1="13" x2="8" y2="13"></line><line x1="16" y1="17" x2="8" y2="17"></line><polyline points="10 9 9 9 8 9"></polyline></svg>
        cGMP Certified
      </span>
      <span class="optibio-traceability__badge-item">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="20 6 9 17 4 12"></polyline></svg>
        3rd-Party Tested
      </span>
      <span class="optibio-traceability__badge-item">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path><polyline points="9 22 9 12 15 12 15 22"></polyline></svg>
        Made in New York
      </span>
      <span class="optibio-traceability__badge-item">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="8" r="7"></circle><polyline points="8.21 13.89 7 23 12 20 17 23 15.79 13.88"></polyline></svg>
        Halal Certified
      </span>
    </div>
    {% endif %}

  </div>
</section>

<style>
  .optibio-traceability {
    padding: var(--optibio-space-xl) var(--optibio-space-md);
  }

  .optibio-traceability__card {
    max-width: 800px;
    margin: 0 auto;
    padding: var(--optibio-space-xl) var(--optibio-space-xl);
    text-align: center;
    border-top: 3px solid var(--optibio-gold);
    border-radius: var(--optibio-radius-card);
    background: var(--optibio-bg-glass);
    backdrop-filter: blur(12px) saturate(180%);
    -webkit-backdrop-filter: blur(12px) saturate(180%);
    border-bottom: 1px solid var(--optibio-border-glass);
    border-left: 1px solid var(--optibio-border-glass);
    border-right: 1px solid var(--optibio-border-glass);
  }

  .optibio-traceability__seal-img {
    margin-bottom: var(--optibio-space-md);
  }

  .optibio-traceability__seal-img img {
    width: 100px;
    height: 100px;
    object-fit: contain;
    border-radius: 50%;
    box-shadow: 0 4px 16px rgba(201, 169, 97, 0.15);
  }

  .optibio-traceability__header {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: var(--optibio-space-sm);
    margin-bottom: var(--optibio-space-md);
  }

  .optibio-traceability__title {
    font-family: var(--optibio-font-display);
    font-size: 22px;
    font-weight: 700;
    color: var(--optibio-navy);
    margin: 0;
  }

  .optibio-traceability__description {
    font-family: var(--optibio-font-body);
    font-size: 15px;
    color: var(--optibio-body);
    line-height: 1.6;
    max-width: 600px;
    margin: 0 auto var(--optibio-space-lg);
  }

  .optibio-traceability__cta {
    display: inline-flex;
    align-items: center;
    gap: 4px;
    font-family: var(--optibio-font-body);
    font-size: 15px;
    font-weight: 600;
    color: var(--optibio-gold);
    text-decoration: none;
    padding: 10px 24px;
    border: 2px solid var(--optibio-gold);
    border-radius: var(--optibio-radius-input);
    transition: all 0.3s ease;
    margin-bottom: var(--optibio-space-lg);
  }

  .optibio-traceability__cta:hover {
    background: var(--optibio-gold);
    color: var(--optibio-white);
  }

  .optibio-traceability__badges {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: var(--optibio-space-md) var(--optibio-space-lg);
    padding-top: var(--optibio-space-md);
    border-top: 1px solid rgba(30, 58, 95, 0.08);
  }

  .optibio-traceability__badge-item {
    display: flex;
    align-items: center;
    gap: 6px;
    font-family: var(--optibio-font-body);
    font-size: 13px;
    font-weight: 500;
    color: var(--optibio-navy);
  }

  .optibio-traceability__badge-item svg {
    stroke: var(--optibio-navy);
    flex-shrink: 0;
  }

  @media (max-width: 768px) {
    .optibio-traceability__card {
      padding: var(--optibio-space-lg) var(--optibio-space-md);
    }

    .optibio-traceability__badges {
      flex-direction: column;
      align-items: center;
      gap: var(--optibio-space-sm);
    }
  }
</style>

{% schema %}
{
  "name": "Traceability Badge",
  "tag": "section",
  "class": "optibio-traceability-wrapper",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Seed to Shelf Verified"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Every Optibio bottle is traceable from raw material sourcing to your doorstep. Manufactured at an FDA-audited, cGMP-certified facility in the USA."
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Verify Your Batch"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "checkbox",
      "id": "show_badges",
      "label": "Show Quality Badges",
      "default": true
    }
  ],
  "presets": [
    {
      "name": "Traceability Badge"
    }
  ]
}
{% endschema %}
