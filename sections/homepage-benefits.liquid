{% comment %}
  Optibio Homepage Benefits Section
  4-column glassmorphism card grid with clinical study stats
  Brand: Navy #1A2F4D, Gold #C9A961, Sora + Inter
{% endcomment %}

<section class="optibio-home-benefits">
  <div class="optibio-home-benefits__container">

    <h2 class="optibio-home-benefits__heading">{{ section.settings.heading }}</h2>
    <p class="optibio-home-benefits__subheading">{{ section.settings.subheading }}</p>

    <div class="optibio-home-benefits__grid">
      {%- for block in section.blocks -%}
        <div class="optibio-home-benefits__card" {{ block.shopify_attributes }}>
          <div class="optibio-home-benefits__icon">{{ block.settings.icon }}</div>
          <h3 class="optibio-home-benefits__stat">{{ block.settings.stat_headline }}</h3>
          <p class="optibio-home-benefits__desc">{{ block.settings.description }}</p>
          {%- if block.settings.study_link != blank -%}
            <a href="{{ block.settings.study_link }}" class="optibio-home-benefits__link">View study â†’</a>
          {%- endif -%}
        </div>
      {%- endfor -%}
    </div>

