{% comment %}
  Optibio Homepage Testimonials Section
  3-column glassmorphism card grid with star ratings
  Brand: Navy #1A2F4D, Gold #C9A961, Sora + Inter
{% endcomment %}

<section class="optibio-home-testimonials">
  <div class="optibio-home-testimonials__container">

    <h2 class="optibio-home-testimonials__heading">{{ section.settings.heading }}</h2>

    <div class="optibio-home-testimonials__grid">
      {%- for block in section.blocks -%}
        <div class="optibio-home-testimonials__card" {{ block.shopify_attributes }}>
          <div class="optibio-home-testimonials__stars">★★★★★</div>
          <p class="optibio-home-testimonials__quote">"{{ block.settings.quote }}"</p>
          <div class="optibio-home-testimonials__author">
            <p class="optibio-home-testimonials__name">{{ block.settings.author_name }}</p>
            <p class="optibio-home-testimonials__location">{{ block.settings.author_location }}</p>
          </div>
        </div>
      {%- endfor -%}
    </div>

  </div>
</section>

{% schema %}
{
  "name": "Homepage Testimonials",
  "tag": "section",
  "class": "optibio-home-testimonials-wrapper",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "What Our Customers Say"
    }
  ],
  "blocks": [
    {
      "type": "testimonial",
      "name": "Testimonial",
      "settings": [
        {
          "type": "textarea",
          "id": "quote",
          "label": "Quote",
          "default": "I was skeptical, but after 3 weeks I noticed I wasn't lying awake at 2am anymore. My mind actually quiets down now. This has been a game-changer for my sleep."
        },
        {
          "type": "text",
          "id": "author_name",
          "label": "Author Name",
          "default": "Rachel K."
        },
        {
          "type": "text",
          "id": "author_location",
          "label": "Author Location",
          "default": "Austin, TX"
        }
      ]
    }
  ],
  "presets": [
