{% comment %}
  Cart Subscription Upsell Banner
  Shows when cart contains one-time purchases (no selling plan).
  Hidden when all items already have subscriptions.
  Links back to product page where the subscription toggle exists.
{% endcomment %}

{%- assign has_onetime_items = false -%}
{%- for item in cart.items -%}
  {%- if item.selling_plan_allocation == nil -%}
    {%- assign has_onetime_items = true -%}
    {%- break -%}
  {%- endif -%}
{%- endfor -%}

{%- comment -%} Calculate free shipping gap for upsell nudge {%- endcomment -%}
{%- assign free_shipping_cents = settings.free_shipping_threshold | default: 49 | times: 100 -%}
{%- assign cart_total = cart.total_price -%}
{%- assign shipping_gap_cents = free_shipping_cents | minus: cart_total -%}
{%- assign needs_shipping_upsell = false -%}
{%- if shipping_gap_cents > 0 and cart_total > 0 -%}
  {%- assign needs_shipping_upsell = true -%}
  {%- assign shipping_gap_dollars = shipping_gap_cents | money_without_trailing_zeros -%}
{%- endif -%}

{%- if has_onetime_items and section.settings.enable_banner -%}
<section class="optibio-cart-subscribe-banner" aria-label="Subscribe and Save offer">
  <style>
    .optibio-cart-subscribe-banner {
      max-width: var(--page-width, 1200px);
      margin: 0 auto;
      padding: 0 1.5rem;
    }
    .optibio-cart-subscribe-inner {
      background: linear-gradient(135deg, #1A2F4D 0%, #152540 100%);
      border-radius: 12px;
      padding: 24px 32px;
      display: flex;
      align-items: center;
      justify-content: space-between;
      gap: 24px;
      margin: 24px 0;
      border: 1px solid rgba(201, 169, 97, 0.3);
    }
    .optibio-cart-subscribe-content {
      flex: 1;
    }
    .optibio-cart-subscribe-badge {
      display: inline-block;
      background: rgba(201, 169, 97, 0.15);
      color: #C9A961;
      font-family: 'Inter', sans-serif;
      font-size: 11px;
      font-weight: 700;
      letter-spacing: 0.1em;
      text-transform: uppercase;
      padding: 4px 12px;
      border-radius: 100px;
      margin-bottom: 8px;
    }
    .optibio-cart-subscribe-title {
      color: #FFFFFF;
      font-family: 'Sora', sans-serif;
      font-size: 18px;
      font-weight: 600;
      margin: 0 0 6px 0;
      line-height: 1.3;
    }
    .optibio-cart-subscribe-desc {
      color: rgba(255, 255, 255, 0.7);
      font-family: 'Inter', sans-serif;
      font-size: 14px;
      margin: 0;
      line-height: 1.5;
    }
    .optibio-cart-subscribe-desc strong {
      color: #C9A961;
    }
    .optibio-cart-subscribe-cta {
      display: inline-flex;
      align-items: center;
      gap: 8px;
      background: #C9A961;
      color: #1A2F4D;
      font-family: 'Inter', sans-serif;
      font-size: 14px;
      font-weight: 600;
      padding: 12px 24px;
      border-radius: 8px;
      text-decoration: none;
      white-space: nowrap;
      transition: background 0.2s ease, transform 0.15s ease;
    }
    .optibio-cart-subscribe-cta:hover {
      background: #B89A4F;
      transform: translateY(-1px);
    }
    .optibio-cart-subscribe-cta svg {
      width: 16px;
      height: 16px;
      flex-shrink: 0;
    }
    /* Free Shipping Progress Bar */
    .optibio-cart-shipping-nudge {
      background: rgba(255, 255, 255, 0.08);
      border-radius: 8px;
      padding: 16px 20px;
      margin: 12px 0 0;
    }
    .optibio-cart-shipping-text {
      color: rgba(255, 255, 255, 0.85);
      font-family: 'Inter', sans-serif;
      font-size: 13px;
      margin: 0 0 8px;
      line-height: 1.4;
    }
    .optibio-cart-shipping-text strong {
      color: #C9A961;
    }
    .optibio-cart-shipping-bar {
      height: 6px;
      background: rgba(255, 255, 255, 0.15);
      border-radius: 3px;
      overflow: hidden;
    }
    .optibio-cart-shipping-fill {
      height: 100%;
      background: linear-gradient(90deg, #C9A961, #E8D69C);
      border-radius: 3px;
      transition: width 0.3s ease;
    }
    .optibio-cart-shipping-achieved {
      color: #4ADE80;
      font-family: 'Inter', sans-serif;
      font-size: 13px;
      font-weight: 600;
      margin: 0;
      display: flex;
      align-items: center;
      gap: 6px;
    }
    @media (max-width: 749px) {
      .optibio-cart-subscribe-inner {
        flex-direction: column;
        text-align: center;
        padding: 20px 24px;
      }
      .optibio-cart-subscribe-title {
        font-size: 16px;
      }
    }
  </style>

  <div class="optibio-cart-subscribe-inner">
    <div class="optibio-cart-subscribe-content">
      <span class="optibio-cart-subscribe-badge">{{ section.settings.badge_text }}</span>
      <h3 class="optibio-cart-subscribe-title">{{ section.settings.heading }}</h3>
      <p class="optibio-cart-subscribe-desc">{{ section.settings.description }}</p>
    </div>
    <a href="{{ section.settings.cta_link }}" class="optibio-cart-subscribe-cta" aria-label="{{ section.settings.cta_text }}">
      {{ section.settings.cta_text }}
      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"><polyline points="9 18 15 12 9 6"></polyline></svg>
    </a>
  </div>

  {%- if section.settings.enable_shipping_bar -%}
    <div class="optibio-cart-shipping-nudge">
      {%- if needs_shipping_upsell -%}
        {%- assign progress_pct = cart_total | times: 100 | divided_by: free_shipping_cents -%}
        {%- if progress_pct > 100 -%}{%- assign progress_pct = 100 -%}{%- endif -%}
        <p class="optibio-cart-shipping-text">You're <strong>{{ shipping_gap_dollars }}</strong> away from <strong>FREE shipping</strong></p>
        <div class="optibio-cart-shipping-bar">
          <div class="optibio-cart-shipping-fill" style="width: {{ progress_pct }}%"></div>
        </div>
      {%- else -%}
        <p class="optibio-cart-shipping-achieved">
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5"><polyline points="20 6 9 17 4 12"/></svg>
          You've unlocked FREE shipping!
        </p>
      {%- endif -%}
    </div>
  {%- endif -%}
</section>
{%- endif -%}

{% schema %}
{
  "name": "Cart Subscribe Banner",
  "class": "cart-subscribe-section",
  "settings": [
    {
      "type": "checkbox",
      "id": "enable_banner",
      "label": "Enable subscribe & save banner",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "enable_shipping_bar",
      "label": "Show free shipping progress bar",
      "default": true,
      "info": "Shows how close the customer is to free shipping"
    },
    {
      "type": "text",
      "id": "badge_text",
      "label": "Badge text",
      "default": "Save 15%"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Switch to Subscribe & Save"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Get <strong>15% off every order</strong> plus free shipping. Cancel or pause anytime â€” no commitment."
    },
    {
      "type": "text",
      "id": "cta_text",
      "label": "Button text",
      "default": "Subscribe & Save"
    },
    {
      "type": "url",
      "id": "cta_link",
      "label": "Button link"
    }
  ]
}
{% endschema %}
