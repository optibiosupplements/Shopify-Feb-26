{% comment %}
  Science Page — Ingredient Deep-Dive: KSM-66® Ashwagandha
  Two-column: features left, supplement facts card right
  Scalable: schema supports multiple ingredients for future products
{% endcomment %}

{{ 'science-page.css' | asset_url | stylesheet_tag }}
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=Sora:wght@600;700&display=swap" rel="stylesheet">

<section class="optibio-ingredient optibio-page-section optibio-reveal">
  <div class="optibio-page-section__inner">
    <span class="optibio-overline">OUR INGREDIENT</span>
    <h2 class="optibio-page-section__heading">{{ section.settings.heading }}</h2>
    <p class="optibio-page-section__subheading">{{ section.settings.subheading }}</p>

    <div class="optibio-ingredient__grid">
      {%- comment -%} Left: Ingredient Info {%- endcomment -%}
      <div class="optibio-ingredient__content">
        <span class="optibio-ingredient__label">{{ section.settings.ingredient_label }}</span>
        <h3 class="optibio-ingredient__name">{{ section.settings.ingredient_name }}</h3>
        <p class="optibio-ingredient__desc">{{ section.settings.ingredient_description }}</p>

        <div class="optibio-ingredient__features">
          {% for block in section.blocks %}
            {% if block.type == 'feature' %}
              <div class="optibio-ingredient__feature" {{ block.shopify_attributes }}>
                <span class="optibio-ingredient__feature-icon">{% render 'optibio-icons', icon: block.settings.icon, size: 24 %}</span>
                <div class="optibio-ingredient__feature-text">
                  <strong>{{ block.settings.title }}</strong><br>
                  {{ block.settings.description }}
                </div>
              </div>
            {% endif %}
          {% endfor %}
        </div>
      </div>

      {%- comment -%} Right: Supplement Facts + Dosage {%- endcomment -%}
      <div>
        <div class="optibio-ingredient__facts-card">
          <h4 class="optibio-ingredient__facts-title">
            {% render 'optibio-icons', icon: 'clipboard', size: 18 %} {{ section.settings.facts_title }}
          </h4>

          {% if section.settings.facts_image != blank %}
            <img
              src="{{ section.settings.facts_image | image_url: width: 600 }}"
              alt="Supplement Facts Label"
              class="optibio-ingredient__facts-image"
              loading="lazy"
              width="600"
            />
          {% else %}
            <div class="optibio-ingredient__facts-placeholder">
              Supplement Facts label image will be displayed here.<br>
              Upload via Theme Editor → Science Ingredient → Facts Image
            </div>
          {% endif %}

          <div class="optibio-ingredient__dosage-grid">
            <div class="optibio-ingredient__dosage-item">
              <span class="optibio-ingredient__dosage-value">{{ section.settings.dosage_amount }}</span>
              <span class="optibio-ingredient__dosage-label">Per Serving</span>
            </div>
            <div class="optibio-ingredient__dosage-item">
              <span class="optibio-ingredient__dosage-value">{{ section.settings.capsules_per_serving }}</span>
              <span class="optibio-ingredient__dosage-label">Capsules / Serving</span>
            </div>
            <div class="optibio-ingredient__dosage-item">
              <span class="optibio-ingredient__dosage-value">{{ section.settings.servings_per_container }}</span>
              <span class="optibio-ingredient__dosage-label">Servings / Bottle</span>
            </div>
            <div class="optibio-ingredient__dosage-item">
              <span class="optibio-ingredient__dosage-value">{{ section.settings.standardization }}</span>
              <span class="optibio-ingredient__dosage-label">Withanolides</span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Ingredient Deep-Dive",
  "tag": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Section Heading",
      "default": "Our Ingredients"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Section Subheading",
      "default": "We use only clinically studied, patented ingredients at their researched dosages. No proprietary blends."
    },
    {
      "type": "text",
      "id": "ingredient_label",
      "label": "Ingredient Label",
      "default": "★ Patented Ingredient"
    },
    {
      "type": "text",
      "id": "ingredient_name",
      "label": "Ingredient Name",
      "default": "KSM-66® Ashwagandha"
    },
    {
      "type": "richtext",
      "id": "ingredient_description",
      "label": "Ingredient Description",
      "default": "<p>KSM-66® is the world's most clinically studied ashwagandha extract — a full-spectrum root extract standardized to 5% withanolides using a unique milk-based extraction process. Unlike generic ashwagandha products that use leaf or aerial parts, KSM-66® uses only the root, preserving the natural balance of active compounds exactly as studied in clinical trials.</p>"
    },
    {
      "type": "text",
      "id": "facts_title",
      "label": "Facts Card Title",
      "default": "Supplement Facts"
    },
    {
      "type": "image_picker",
      "id": "facts_image",
      "label": "Supplement Facts Label Image"
    },
    {
      "type": "text",
      "id": "dosage_amount",
      "label": "Dosage Amount",
      "default": "600mg"
    },
    {
      "type": "text",
      "id": "capsules_per_serving",
      "label": "Capsules Per Serving",
      "default": "2"
    },
    {
      "type": "text",
      "id": "servings_per_container",
      "label": "Servings Per Container",
      "default": "45"
    },
    {
      "type": "text",
      "id": "standardization",
      "label": "Standardization",
      "default": "5%"
    }
  ],
  "blocks": [
    {
      "type": "feature",
      "name": "Feature Callout",
      "limit": 6,
      "settings": [
        {
          "type": "text",
          "id": "icon",
          "label": "Icon (emoji)",
          "default": "leaf"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Full-Spectrum Root Extract"
        },
        {
          "type": "text",
          "id": "description",
          "label": "Description",
          "default": "Uses only the root — not leaf or aerial parts — preserving the complete natural compound profile."
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Ingredient Deep-Dive",
      "blocks": [
        { "type": "feature", "settings": { "icon": "leaf", "title": "Full-Spectrum Root Extract", "description": "Uses only the root — not leaf or aerial parts — preserving the complete natural compound profile." } },
        { "type": "feature", "settings": { "icon": "test-tube", "title": "Milk-Based Extraction", "description": "Patented process that maintains the natural ratio of active compounds, unlike harsh chemical extractions." } },
        { "type": "feature", "settings": { "icon": "chart", "title": "Clinical Dosage: 600mg", "description": "The exact dosage used in clinical trials — not an underdosed 'sprinkle' like many competitors." } },
        { "type": "feature", "settings": { "icon": "trophy", "title": "24+ Peer-Reviewed Studies", "description": "The most clinically studied ashwagandha extract in the world, with randomized, double-blind trials." } }
      ]
    }
  ]
}
{% endschema %}
