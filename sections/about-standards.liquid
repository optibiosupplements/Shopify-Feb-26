{% comment %}
  About Page ‚Äî Our Standards Grid + What's Next + CTA
  6-card grid of quality standards
  "What's Next" teaser for upcoming products
  Bottom CTA with trust signals
{% endcomment %}

<section class="optibio-about-standards optibio-page-section">
  <div class="optibio-page-section__inner">
    <h2 class="optibio-page-section__heading" style="text-align: center; margin-left: auto; margin-right: auto;">{{ section.settings.heading }}</h2>
    <p class="optibio-page-section__subheading" style="text-align: center; margin-left: auto; margin-right: auto;">{{ section.settings.subheading }}</p>

    <div class="optibio-about-standards__grid">
      {% for block in section.blocks %}
        {% if block.type == 'standard' %}
          <div class="optibio-about-standards__card" {{ block.shopify_attributes }}>
            <div class="optibio-about-standards__card-icon">{{ block.settings.icon }}</div>
            <h3 class="optibio-about-standards__card-title">{{ block.settings.title }}</h3>
            <p class="optibio-about-standards__card-desc">{{ block.settings.description }}</p>
          </div>
        {% endif %}
      {% endfor %}
    </div>

    {% if section.settings.show_next_section %}
      <div class="optibio-about-next">
        <h3 class="optibio-about-next__heading">{{ section.settings.next_heading }}</h3>
        <p class="optibio-about-next__text">{{ section.settings.next_text }}</p>
      </div>
    {% endif %}
  </div>
</section>

{%- comment -%} Bottom CTA {%- endcomment -%}
<section class="optibio-page-cta optibio-page-section">
  <div class="optibio-page-section__inner">
    <h2 class="optibio-page-section__heading" style="text-align: center; margin-left: auto; margin-right: auto;">{{ section.settings.cta_heading }}</h2>
    <p class="optibio-page-section__subheading" style="text-align: center; margin-left: auto; margin-right: auto;">{{ section.settings.cta_subheading }}</p>

    <a href="{{ section.settings.cta_link | default: '/products/optibio-ashwagandha-ksm-66' }}" class="optibio-page-cta__btn">
      {{ section.settings.cta_text }}
      <span>‚Üí</span>
    </a>

    <div class="optibio-page-cta__trust">
      <span><span class="optibio-page-cta__check">‚úî</span> 90-day money-back guarantee</span>
      <span><span class="optibio-page-cta__check">‚úî</span> Free shipping on $75+</span>
      <span><span class="optibio-page-cta__check">‚úî</span> Third-party tested</span>
    </div>
  </div>
</section>

