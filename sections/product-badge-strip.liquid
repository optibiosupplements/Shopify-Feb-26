{% comment %}
  Optibio Trust Badge Strip
  Premium visual certification badges displayed as a horizontal strip
  Features: Made in NY, Seed-to-Shelf, Award Winning, Halal, Third-Party Tested, Allergen-Free
  Brand: Navy #1A2F4D, Gold #C9A961, Sora + Inter
{% endcomment %}

<section class="optibio-section optibio-badge-strip" id="optibio-badge-strip">
  <div class="page-width">

    {% if section.settings.show_heading %}
    <div class="optibio-badge-strip__header">
      <p class="optibio-badge-strip__label">{{ section.settings.heading }}</p>
    </div>
    {% endif %}

    <div class="optibio-badge-strip__track">
      {% for block in section.blocks %}
        <div class="optibio-badge-strip__item" {{ block.shopify_attributes }}>
          <div class="optibio-badge-strip__seal">
            {% if block.settings.badge_image != blank %}
              <img
                src="{{ block.settings.badge_image | image_url: width: 200 }}"
                alt="{{ block.settings.badge_label }}"
                width="80"
                height="80"
                loading="lazy"
                class="optibio-badge-strip__img"
              >
            {% else %}
              <div class="optibio-badge-strip__icon-svg">
                {% case block.settings.badge_label %}
                  {% when 'Made in NY' %}
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 48 48" fill="none" stroke="#C9A961" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><rect x="10" y="22" width="6" height="16" rx="1"/><rect x="21" y="14" width="6" height="24" rx="1"/><rect x="32" y="18" width="6" height="20" rx="1"/><line x1="6" y1="38" x2="42" y2="38"/><path d="M24 10l-2-4h4l-2 4" fill="#C9A961"/></svg>
                  {% when 'Seed-to-Shelf' %}
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 48 48" fill="none" stroke="#C9A961" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><path d="M24 38V22"/><path d="M24 22c-4-6-12-8-12-2s8 8 12 2z" fill="#C9A961" fill-opacity="0.2"/><path d="M24 22c4-6 12-8 12-2s-8 8-12 2z" fill="#C9A961" fill-opacity="0.2"/><path d="M24 28c-3-2-8-2-8 1s5 4 8 1z" fill="#C9A961" fill-opacity="0.15"/><circle cx="24" cy="40" r="2" fill="#C9A961"/></svg>
                  {% when 'Award Winning' %}
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 48 48" fill="none" stroke="#C9A961" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><circle cx="24" cy="18" r="10" fill="#C9A961" fill-opacity="0.15"/><path d="M18 26l-4 14 10-5 10 5-4-14"/><path d="M24 12l2 4 4.5.5-3.25 3.5 1 4.5L24 22l-4.25 2.5 1-4.5L17.5 16.5 22 16z" fill="#C9A961" fill-opacity="0.3"/></svg>
                  {% when 'Halal Certified' %}
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 48 48" fill="none" stroke="#C9A961" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><circle cx="24" cy="24" r="14" fill="#C9A961" fill-opacity="0.1"/><path d="M28 14a10 10 0 1 0 0 20 8 8 0 1 1 0-20z" fill="#C9A961" fill-opacity="0.2"/><circle cx="30" cy="18" r="2" fill="#C9A961" fill-opacity="0.4"/></svg>
                  {% when '3rd-Party Tested' %}
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 48 48" fill="none" stroke="#C9A961" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><path d="M24 6l12 6v10c0 8-5 14-12 18-7-4-12-10-12-18V12z" fill="#C9A961" fill-opacity="0.1"/><polyline points="18 24 22 28 30 18" stroke-width="2.5"/></svg>
                  {% when 'Allergen Free' %}
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 48 48" fill="none" stroke="#C9A961" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><circle cx="24" cy="24" r="14" fill="#C9A961" fill-opacity="0.1"/><polyline points="16 24 22 30 32 18" stroke-width="2.5"/></svg>
                  {% else %}
                    <div class="optibio-badge-strip__icon-fallback">
                      {{ block.settings.badge_emoji }}
                    </div>
                {% endcase %}
              </div>
            {% endif %}
          </div>
          <span class="optibio-badge-strip__label-text">{{ block.settings.badge_label }}</span>
          {% if block.settings.badge_sub != blank %}
            <span class="optibio-badge-strip__sub">{{ block.settings.badge_sub }}</span>
          {% endif %}
        </div>
      {% endfor %}
    </div>

  </div>
</section>

<style>
  .optibio-badge-strip {
    padding: 40px 16px;
    background: radial-gradient(ellipse at center, #F8FCFE 0%, #EBF5FB 40%, #D6EAF8 100%);
  }

  .optibio-badge-strip::after {
    display: none;
  }

  .optibio-badge-strip__header {
    text-align: center;
    margin-bottom: 32px;
  }

  .optibio-badge-strip__label {
    font-family: 'Inter', sans-serif;
    font-size: 11px;
    font-weight: 600;
    letter-spacing: 0.15em;
    text-transform: uppercase;
    color: #C9A961;
    margin: 0;
  }

  .optibio-badge-strip__track {
    display: flex;
    justify-content: center;
    align-items: flex-start;
    gap: 40px;
    flex-wrap: wrap;
    max-width: 1000px;
    margin: 0 auto;
  }

  .optibio-badge-strip__item {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 10px;
    min-width: 90px;
    max-width: 120px;
    text-align: center;
    transition: transform 0.3s cubic-bezier(0.34, 1.56, 0.64, 1);
  }

  .optibio-badge-strip__item:hover {
    transform: translateY(-4px);
  }

  .optibio-badge-strip__seal {
    width: 80px;
    height: 80px;
    border-radius: 50%;
    background: #1A2F4D;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    box-shadow: 0 4px 16px rgba(30, 58, 95, 0.2),
                0 0 0 3px rgba(201, 169, 97, 0.25);
    transition: box-shadow 0.3s ease;
  }

  .optibio-badge-strip__item:hover .optibio-badge-strip__seal {
    box-shadow: 0 8px 24px rgba(30, 58, 95, 0.25),
                0 0 0 3px rgba(201, 169, 97, 0.5);
  }

  .optibio-badge-strip__img {
    width: 80px;
    height: 80px;
    object-fit: cover;
    border-radius: 50%;
  }

  .optibio-badge-strip__icon-svg {
    width: 48px;
    height: 48px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .optibio-badge-strip__icon-svg svg {
    width: 48px;
    height: 48px;
  }

  .optibio-badge-strip__icon-fallback {
    font-size: 32px;
    line-height: 1;
  }

  .optibio-badge-strip__label-text {
    font-family: 'Sora', sans-serif;
    font-size: 12px;
    font-weight: 700;
    color: #1A2F4D;
    line-height: 1.3;
    letter-spacing: 0.02em;
  }

  .optibio-badge-strip__sub {
    font-family: 'Inter', sans-serif;
    font-size: 11px;
    font-weight: 400;
    color: #64748B;
    line-height: 1.3;
  }

  /* Mobile: 2 columns grid with scroll */
  @media (max-width: 768px) {
    .optibio-badge-strip {
      padding: 32px 16px;
    }

    .optibio-badge-strip__track {
      display: grid;
      grid-template-columns: repeat(3, 1fr);
      gap: 24px 16px;
      justify-items: center;
    }

    .optibio-badge-strip__seal {
      width: 64px;
      height: 64px;
    }

    .optibio-badge-strip__img {
      width: 64px;
      height: 64px;
    }

    .optibio-badge-strip__label-text {
      font-size: 11px;
    }

    .optibio-badge-strip__sub {
      font-size: 10px;
    }
  }

  @media (max-width: 480px) {
    .optibio-badge-strip__track {
      grid-template-columns: repeat(3, 1fr);
      gap: 20px 12px;
    }
  }
</style>

